{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/analyze",
      "dest": "app.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "ROBOFLOW_API_KEY": "@roboflow_api_key",
    "GROQ_API_KEY": "@groq_api_key",
    "SECRET_KEY": "@secret_key",
    "WORKSPACE": "@workspace",
    "PROJECT": "@project",
    "VERSION": "@version"
  }
}

